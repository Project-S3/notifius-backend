{
  "manifest_version": 2,
  "name": "Notifus",
  "version": "2.0",
  "description": "Envoie des notification pour les étudiants en Génie UdeS",

  "icons": {
    "16": "Notifus_Logo16.png",
    "48": "Notifus_Logo48.png",
    "128": "Notifus_Logo128.png"
  },
  "permissions": [
    "notifications"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Notifus"
  },
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  }
}